@model IEnumerable<HRManagementApp.Models.Employee>

@{
    ViewData["Title"] = "Attendance Record";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Staff Attendance Record</h1>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">Back to Home</a>
        <a asp-action="Create" class="btn btn-primary">Clock In New Staff</a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white text-center p-3 shadow-sm">
            <h4 class="mb-0">@ViewBag.TotalCount</h4>
            <small>Total Records</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white text-center p-3 shadow-sm">
            <h4 class="mb-0">@ViewBag.PresentToday</h4>
            <small>Present Today</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark text-center p-3 shadow-sm">
            <h4 class="mb-0">@ViewBag.LateToday</h4>
            <small>Late Today</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white text-center p-3 shadow-sm">
            <h4 class="mb-0">@ViewBag.AbsentToday</h4>
            <small>Absent Today</small>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name..." />
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="FetchFromApi" class="btn btn-info text-white me-2">
            <i class="bi bi-cloud-download"></i> Fetch External Staff
        </a>

        <a asp-action="DownloadReport" class="btn btn-dark">
            <i class="bi bi-file-earmark-excel"></i> Download CSV Report
        </a>
    </div>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>Date & Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>
                    @item.ClockInTime.ToString("MMM dd, hh:mm tt")
                </td>
                <td>
                    @if (item.AttendanceStatus == "Present")
                    {
                        <span class="badge bg-success">@item.AttendanceStatus</span>
                    }
                    else if (item.AttendanceStatus == "Late")
                    {
                        <span class="badge bg-warning text-dark">@item.AttendanceStatus</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">@item.AttendanceStatus</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>