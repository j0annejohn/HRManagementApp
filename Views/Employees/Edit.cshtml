@model HRManagementApp.Models.Employee

@{
    ViewData["Title"] = "Edit Attendance Record";
}

<h1>Edit Attendance</h1>

<h4>Employee: @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ClockInTime" class="control-label">Attendance Date/Time</label>
                <input asp-for="ClockInTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="ClockInTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="control-label d-block">Attendance Status</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="AttendanceStatus" value="Present">
                    <label class="form-check-label">Present</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="AttendanceStatus" value="Late">
                    <label class="form-check-label">Late</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="AttendanceStatus" value="Absent">
                    <label class="form-check-label">Absent</label>
                </div>
                <span asp-validation-for="AttendanceStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to Staff List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}